<div class="container">
    <div id="header">
    <h1><%= @list.name %></h1>
  </div>
    <%= link_to "Add movies to list",  new_list_bookmark_path(@list, @bookmark), class: "btn btn-primary" %>

    <div class="movie-card-container d-flex">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="movie-card">
          <%= image_tag(bookmark.movie.poster_url, width: "200px" ) %>
          <p><%= bookmark.comment %></p>
          <p><%= bookmark.movie.rating %></p>
            <%= link_to 'Delete', bookmark_path(bookmark),
      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
      class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>

  <%= link_to "Back", root_path, class: "btn btn-primary"%>
</div>
